<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/btn_zone_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_back" />

        <FrameLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:background="#ddd" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="17dp"
            android:text="我的空间"
            android:textSize="15dp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ddd" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="#ffb245" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_zone" />

        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:src="@drawable/bg_avatar" />

        <com.example.fiveyuanstore.fragment.widgets.AvatarView
            android:id="@+id/avatar"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="33dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="MY PROFILE"
                android:textColor="#fff" />

            <ImageView
                android:id="@+id/user_sex"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="2dp"
				android:src="@drawable/ic_male"/>
        </LinearLayout>

        <TextView
            android:id="@+id/user_whats_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="15dp"
            android:text="whats up"
            android:textColor="#fff" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ddd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:text="ta卖的商品有" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ddd" />

    
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp" >

            <TextView
                android:id="@+id/btn_goods"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/filter"
                android:gravity="center"
                android:lines="1"
                android:padding="0dip"
                android:text="ta的商品"
                android:textColor="#ff5337"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/btn_goods_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:lines="1"
                android:padding="0dip"
                android:text="ta的清单"
                android:textSize="15dp" />

        </LinearLayout>
        <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ddd" />
       <ListView 
           android:id="@+id/zone_list"
           android:layout_width="match_parent"
            android:layout_height="wrap_content"></ListView>

</LinearLayout>