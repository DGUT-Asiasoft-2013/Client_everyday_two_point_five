<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/R1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.example.fiveyuanstore.customViews.ProImgView
                android:id="@+id/img"
                android:layout_width="108dp"
                android:layout_height="88dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="115dp" >

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img"
                    android:text="Title"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title"
                    android:text="name"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/username"
                    android:text="Create Date"
                    android:textColor="#aaa"
                    android:textSize="12sp" />
            </RelativeLayout>
            
        </RelativeLayout>

        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"                       
            android:layout_gravity="right"
            android:layout_marginRight="8dp"
            android:text="money"
            android:textColor="#FF5000" />

        <FrameLayout
            android:id="@+id/F1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Content Text"
                android:textColor="@android:color/black" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:layout_marginTop="18dp"
            android:weightSum="5">

            <Button
                android:id="@+id/down"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg"
                android:text="下架"
                android:textColor="#FF5557"
                android:padding="5dp"
                android:layout_marginLeft="15dp" />

            <Button
                android:id="@+id/change"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg"
                android:text="修改"
                  android:padding="5dp"
                android:layout_marginLeft="15dp"
                android:textColor="#FF5557" />

            <Button
                android:id="@+id/freshComment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/bg"
                android:text="刷新评论"
                  android:padding="5dp"
                android:textColor="#FF5557"
                android:layout_marginLeft="15dp" />
            
       <Button  
        android:id="@+id/btnShareAllGui"  
        android:layout_width="0dp"  
        android:layout_height="wrap_content"  
        android:layout_weight="1" 
        android:padding="5dp"
        android:textColor="#FF5557"
        android:background="@drawable/bg"
       android:layout_marginLeft="15dp"
        android:text="分享"  
     />  
        </LinearLayout>

        <ListView
            android:id="@+id/goods_comment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </ListView>
    </LinearLayout>

</FrameLayout>