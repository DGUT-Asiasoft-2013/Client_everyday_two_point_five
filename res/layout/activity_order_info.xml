<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp" >

    <com.example.fiveyuanstore.customViews.ProImgView
        android:id="@+id/proImg"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/orderid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="96dp"
        android:minHeight="25dp"
        android:minWidth="100dp"
        android:text="订单编号"
        android:textColor="#3E3E3C"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/orderid"
        android:layout_below="@+id/orderid"
        android:minHeight="25dp"
        android:minWidth="100dp"
        android:text="商品名称："
        android:textColor="#3E3E3C"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/status"
        android:text="date"
        android:textColor="#3E3E3C"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/orderNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/proImg"
        android:minHeight="25dp"
        android:minWidth="30dp"
        android:text="数量"
        android:textColor="#3E3E3C" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sureSendGoods"
        android:layout_below="@+id/title"
        android:text="text"
        android:textColor="#00000000"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="115dp"
        android:gravity="left"
        android:text="phone" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:gravity="left"
        android:text="name" />

    <TextView
        android:id="@+id/adress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="135dp"
        android:gravity="left"
        android:text="adress" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/phone"
        android:text="status"
        android:textColor="#f82800" />

    <FrameLayout
        android:id="@+id/F"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/status"
        android:layout_marginTop="20dp"
        android:background="#ddd" >
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/F"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/sureSendGoods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="确认发货"
            android:textColor="#3E3E3C"
            android:textSize="18sp" 
            android:layout_weight="2"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"           
            android:layout_weight="1">
            <FrameLayout 
                android:layout_height="match_parent"
                android:layout_width="1dp"
                android:layout_gravity="center_horizontal"
                android:background="#ddd">
                
            </FrameLayout>"
        </FrameLayout>

        <TextView
            android:id="@+id/cancleOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="取消订单"
            android:textColor="#3E3E3C"
            android:textSize="18sp"
            android:layout_weight="2" />
    </LinearLayout>

</RelativeLayout>