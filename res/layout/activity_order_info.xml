<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout
         xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:background="#fff">

        <com.example.fiveyuanstore.customViews.ProImgView
            android:id="@+id/proImg"
            android:layout_width="56dp"
            android:layout_height="80dp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/orderid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="62dp"
            android:minHeight="25dp"
            android:minWidth="100dp"
            android:text="订单编号"
            android:textColor="#3E3E3C"
            android:textSize="12dp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/status"
        android:text="date"
        android:textColor="#3E3E3C"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/orderNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/proImg"
        android:minHeight="25dp"
        android:minWidth="30dp"
        android:text="数量"
        android:textColor="#3E3E3C"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/orderNum"
        android:layout_marginTop="19dp"
        android:layout_toLeftOf="@+id/orderNum"
        android:text="status"
        android:textColor="#f82800"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sureSendGoods"
        android:layout_below="@+id/title"
        android:text="text"
        android:textColor="@android:color/black"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/orderid"
        android:layout_below="@+id/orderid"
        android:minHeight="25dp"
        android:minWidth="100dp"
        android:text="商品名称"
        android:textColor="#3E3E3C"
        android:textSize="12dp" />

    <Button
        android:id="@+id/cancleOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/status"
        android:layout_marginTop="14dp"
        android:background="#fff"
        android:text="取消订单"
        android:textColor="#3E3E3C"
        android:textSize="12dp" />

    <Button
        android:id="@+id/sureSendGoods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cancleOrder"
        android:layout_alignBottom="@+id/cancleOrder"
        android:layout_alignRight="@+id/title"
        android:background="#fff"
        android:text="确认发货"
        android:textColor="#3E3E3C"
        android:textSize="12dp" />

    </RelativeLayout>