<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/navbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ff593e"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/btn_search"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/btn_search" />

            <ImageView
                android:id="@+id/bg_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/btn_search"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/btn_search"
                android:scaleType="fitXY"
                android:src="@drawable/bg_search" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@id/bg_search"
                android:layout_alignLeft="@id/bg_search"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="11dp"
                android:src="@drawable/ic_search" />

            <EditText
                android:id="@+id/search_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/bg_search"
                android:layout_alignLeft="@id/bg_search"
                android:layout_alignRight="@id/bg_search"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="36dp"
                android:background="#00000000"
                android:text="毛衣"
                android:textColor="#fff"
                android:textSize="18dp" >

                <requestFocus />
            </EditText>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#fff"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="10dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_classify" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ddd" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:orientation="horizontal" >

                <fragment
                    android:id="@+id/snack"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    class="com.example.fiveyuanstore.fragment.list.PageCommodityClassifyFragment"
                    tools:layout="@layout/fragment_page_commodity_classify" />

                <fragment
                    android:id="@+id/clothing"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    class="com.example.fiveyuanstore.fragment.list.PageCommodityClassifyFragment"
                    tools:layout="@layout/fragment_page_commodity_classify" />

                <fragment
                    android:id="@+id/fruit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    class="com.example.fiveyuanstore.fragment.list.PageCommodityClassifyFragment"
                    tools:layout="@layout/fragment_page_commodity_classify" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="8dp"
                android:text="商品列表"
                android:textColor="#ff593e"
                android:textSize="20dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ddd" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/commodity_sort_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:textColor="#ff593e"
                    android:textSize="17dp" 
                    android:text="时间排序▼" />

                <TextView
                    android:id="@+id/commodity_sort_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:textSize="17dp" 
                    android:text="价格排序" />

                <RelativeLayout 
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4">
                    
                    <FrameLayout 
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:background="#ddd"/>
                    <TextView
                        android:id="@+id/commodity_sort_custom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textSize="17dp" 
                    android:text="筛选" />
                </RelativeLayout>
                
            </LinearLayout>

            <FrameLayout 
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ddd"/>
            <ListView
                android:id="@+id/goods_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#fff"
                android:dividerHeight="0dip" 
                android:background="#fff">
            </ListView>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>