<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/navbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ff593e"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/btn_search"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/btn_search" />

            <ImageView
                android:id="@+id/bg_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/btn_search"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/btn_search"
                android:scaleType="fitXY"
                android:src="@drawable/bg_search" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@id/bg_search"
                android:layout_alignLeft="@id/bg_search"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="11dp"
                android:src="@drawable/ic_search" />

            <EditText
                android:id="@+id/search_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/bg_search"
                android:layout_alignLeft="@id/bg_search"
                android:layout_alignRight="@id/bg_search"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="36dp"
                android:background="#00000000"
                android:hint="搜索商品"
                android:textColor="#fff"
                android:textColorHint="#ffa293"
                android:textSize="18dp" >
            </EditText>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="43dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:padding="8dp"
                    android:text="商品列表"
                    android:textColor="#ff593e"
                    android:textSize="20dp" />

                <FrameLayout
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="52dp"
                    android:background="#ddd" />

                <TextView
                    android:id="@+id/btn_classify"
                    android:layout_width="52dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="分类"
                    android:textSize="15dp" />
            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ddd" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/commodity_sort_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="时间排序▼"
                    android:textColor="#ff593e"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/commodity_sort_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="价格排序"
                    android:textSize="17dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4" >

                    <FrameLayout
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentTop="true"
                        android:background="#ddd" />

                    <TextView
                        android:id="@+id/commodity_sort_custom"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="筛选"
                        android:textSize="17dp" />
                </RelativeLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ddd" />
        </LinearLayout>

        <ListView
            android:id="@+id/goods_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:divider="#fff"
            android:dividerHeight="0dip" >
        </ListView>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/container_in_goods"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>